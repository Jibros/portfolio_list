{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2,
        "printWidth": 500,
        "singleQuote": false
      }
    },
    {
      "files": "*.{scss,css}",
      "options": {
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": ["*.js", "*.jsx", "*.json"],
      "options": {
        "trailingComma": "all",
        "semi": false
      }
    }
  ]
}
